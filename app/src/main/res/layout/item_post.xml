<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingClass">

    <LinearLayout
        android:id="@+id/user_loc"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        android:layout_width="375dp"
        android:layout_height="48dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_profile"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_user_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <LinearLayout
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/img_profile"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="75dp"
            android:layout_height="19dp"
            android:text="User name"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="19dp"
            android:text="Location"
            android:textSize="13sp" />
    </LinearLayout>

        <ImageView
            android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/user_loc"
        android:orientation="vertical"
        android:layout_width="375dp"
        android:layout_height="445dp"
        tools:ignore="MissingConstraints" >

        <ImageView
            android:id="@+id/iv_post"
            android:layout_width="375dp"
            android:layout_height="339dp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="375dp"
            android:layout_height="30dp">

            <ImageView
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_like"
                android:layout_width="23dp"
                android:layout_height="21dp"/>
            <ImageView
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_comment"
                android:layout_width="23dp"
                android:layout_height="21dp"/>
            <ImageView
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_direct"
                android:layout_width="23dp"
                android:layout_height="21dp"/>
            <ImageView
                android:layout_marginStart="236dp"
                android:src="@drawable/ic_collect"
                android:layout_width="23dp"
                android:layout_height="21dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="352dp"
            android:layout_height="19dp">

            <TextView
                android:textColor="#000"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="Liked by"
                android:layout_width="wrap_content"
                android:layout_height="19dp"/>

            <TextView
                android:id="@+id/countLikes"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                android:textSize="13sp"
                android:text="zhumaeva__m and others"
                android:layout_width="wrap_content"
                android:layout_height="19dp"/>
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="352dp"
            android:layout_height="19dp">

            <TextView
                android:textColor="#000"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="pieroborgo"
                android:layout_width="wrap_content"
                android:layout_height="19dp"/>

            <TextView
                android:id="@+id/Comments"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                android:textSize="13sp"
                android:text="1, 2, 3 --> Challenge On! #ironhack #uxui #bootcamp"
                android:layout_width="wrap_content"
                android:layout_height="19dp"/>
        </LinearLayout>


</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>